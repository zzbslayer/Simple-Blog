<%= form_for ([@article, @article.comments.build]), :html => { :class => "form-horizontal comment" } do |f| %>
  <div class="form-group">
    <%= f.label :commenter, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :commenter, :class => 'form-control' %>
    </div>
    <%=f.error_span(:commenter) %>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
    <%=f.error_span(:body) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
